<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_little"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_middle"
        android:paddingRight="@dimen/padding_middle"
        android:paddingTop="@dimen/padding_normal">

        <com.foxmount.gitfox.utils.CircularImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle"
            android:src="@drawable/c" />


        <TextView
            android:id="@+id/name"
            style="@style/NameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello" />

        <TextView
            android:id="@+id/score"
            style="@style/SimpleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_little"
            android:text="10389" />


    </LinearLayout>
</android.support.v7.widget.CardView>